/* 提醒页面样式 */
.filter-tabs {
  display: flex;
  gap: 12rpx;
  margin-bottom: 24rpx;
  flex-wrap: wrap;
}

.filter-tab {
  padding: 12rpx 24rpx;
  border-radius: 40rpx;
  font-size: 24rpx;
  font-weight: 500;
  background: #FFFFFF;
  color: #8E8EA0;
  border: 2rpx solid #E8E8F0;
}

.filter-tab.active {
  background: #6C63FF;
  color: #FFFFFF;
  border-color: #6C63FF;
}

