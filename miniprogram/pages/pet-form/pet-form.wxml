<!-- 添加/编辑宠物表单 -->
<view class="container">
  <view class="card">
    <view class="form-group">
      <text class="form-label">宠物名字</text>
      <input class="form-input" placeholder="如：小橘" value="{{petForm.name}}" bindinput="onPetInput" data-field="name" />
    </view>

    <view class="form-group">
      <text class="form-label">类型</text>
      <view class="type-selector">
        <view class="type-option {{petForm.type === 'cat' ? 'active' : ''}}" bindtap="setPetType" data-type="cat">🐱 猫</view>
        <view class="type-option {{petForm.type === 'dog' ? 'active' : ''}}" bindtap="setPetType" data-type="dog">🐶 狗</view>
        <view class="type-option {{petForm.type === 'other' ? 'active' : ''}}" bindtap="setPetType" data-type="other">🐹 其他</view>
      </view>
    </view>

    <view class="form-group">
      <text class="form-label">品种</text>
      <input class="form-input" placeholder="如：橘猫、金毛" value="{{petForm.breed}}" bindinput="onPetInput" data-field="breed" />
    </view>

    <view class="form-group">
      <text class="form-label">生日</text>
      <picker mode="date" value="{{petForm.birthday}}" bindchange="onBirthdayChange">
        <view class="picker-wrapper">{{petForm.birthday || '请选择日期（可选）'}}</view>
      </picker>
    </view>

    <view class="form-group">
      <text class="form-label">性别</text>
      <view class="type-selector">
        <view class="type-option {{petForm.gender === 'male' ? 'active' : ''}}" bindtap="setPetGender" data-gender="male">♂ 公</view>
        <view class="type-option {{petForm.gender === 'female' ? 'active' : ''}}" bindtap="setPetGender" data-gender="female">♀ 母</view>
      </view>
    </view>

    <view class="form-group">
      <text class="form-label">当前体重 (kg)</text>
      <input class="form-input" type="digit" placeholder="如：4.5" value="{{petForm.weight}}" bindinput="onPetInput" data-field="weight" />
    </view>

    <button class="btn-primary" bindtap="savePet">保存</button>
    <button class="btn-secondary" style="margin-top:16rpx;" bindtap="cancelForm">取消</button>
  </view>
</view>
