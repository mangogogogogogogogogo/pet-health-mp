/* 首页样式 */
.pet-actions {
  padding: 10rpx;
}

/* 快捷入口 */
.quick-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 24rpx;
}

.quick-action-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 24rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  font-size: 26rpx;
  font-weight: 500;
  color: #2D2D3A;
  box-shadow: 0 4rpx 20rpx rgba(108, 99, 255, 0.06);
}

.quick-icon {
  font-size: 32rpx;
}
