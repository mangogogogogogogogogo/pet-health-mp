<view class="tab-bar">
  <view
    wx:for="{{list}}"
    wx:key="index"
    class="tab-item {{item.isAdd ? 'add-item' : ''}} {{selected === index ? 'active' : ''}}"
    data-path="{{item.pagePath}}"
    data-index="{{index}}"
    bindtap="switchTab"
  >
    <view class="tab-icon {{item.isAdd ? 'add-icon' : ''}}">{{item.icon}}</view>
    <view class="tab-text" wx:if="{{!item.isAdd}}">{{item.text}}</view>
  </view>
</view>
